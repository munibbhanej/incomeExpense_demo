<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layoutDirection="ltr"
    tools:context=".Activity.Home_Activity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="?attr/backgroundColor"
            android:layoutDirection="ltr"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Income Expense"
            app:titleMarginStart="@dimen/_8sdp"
            app:titleTextColor="#fff" />
        <!--    android:layout_marginBottom="@dimen/_3sdp"-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/customBackgroundColor"
            android:overScrollMode="never"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_50sdp">


                <TextView
                    android:id="@+id/pra_txt_home"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:background="@null"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="name"
                    android:textColor="?attr/android:textColor"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

                <!--           1                 -->
                <GridLayout
                    android:id="@+id/gridLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layoutDirection="ltr"
                    android:rowCount="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/addincome_cardview_lay1_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#4CB050"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/add_income" />

                            <TextView
                                android:id="@+id/add_income_txt_lay1_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/add_income"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/addexpense_cardview_lay1_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#F44236"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/add_expense" />

                            <TextView
                                android:id="@+id/add_expense_txt_lay1_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/add_expense"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/transfer_cardview_lay1_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#FF6F00"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_8sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/transfer" />

                            <TextView
                                android:id="@+id/transfer_txt_lay1_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/transfer"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/transactions_cardview_lay1_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="#02B6D6"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/transactions" />

                            <TextView
                                android:id="@+id/transaction_txt_lay1_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/transactions"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </GridLayout>

                <!--           2                 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/gridLayout2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="?attr/colorCardBackground"
                        app:cardCornerRadius="@dimen/_2sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/date_txt1_lay2_home"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="?attr/customTextColor"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/date_txt2_lay2_home"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="  ->  "
                                    android:textColor="?attr/customTextColor"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/date_txt3_lay2_home"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="?attr/customTextColor"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/card_bg"
                                android:orientation="vertical">


                                <GridLayout
                                    android:id="@+id/gridLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:columnCount="3"
                                    android:padding="@dimen/_1sdp"
                                    android:rowCount="1">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_rowWeight="1"
                                        android:layout_columnWeight="1"
                                        app:cardBackgroundColor="?attr/colorCardBackground"
                                        app:cardCornerRadius="0sp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:orientation="vertical"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/income_lay2_home"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="@string/income_lay2"
                                                android:textColor="#1D5A20"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/income_lay2_home_1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textColor="#1D5A20"
                                                android:textSize="@dimen/_12sdp" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_rowWeight="1"
                                        android:layout_columnWeight="1"
                                        android:layout_marginStart="@dimen/_1sdp"
                                        app:cardBackgroundColor="?attr/colorCardBackground"
                                        app:cardCornerRadius="0sp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:orientation="vertical"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/expense_lay2_home"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="@string/expense_lay2"
                                                android:textColor="#E63131"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="bold"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/listViewRegId" />

                                            <TextView
                                                android:id="@+id/expense_lay2_home_1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textColor="#E63131"
                                                android:textSize="@dimen/_12sdp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/listViewName" />


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_rowWeight="1"
                                        android:layout_columnWeight="1"
                                        android:layout_marginStart="@dimen/_1sdp"
                                        app:cardBackgroundColor="?attr/colorCardBackground"
                                        app:cardCornerRadius="0sp">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:orientation="vertical"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/total_balance_lay2_home"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="@string/balance_one_lay2"
                                                android:textColor="?attr/customTextColor"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="bold"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/listViewRegId" />

                                            <TextView
                                                android:id="@+id/total_balance_lay2_home_1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textColor="#000000"
                                                android:textSize="@dimen/_12sdp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/listViewName" />


                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>


                                </GridLayout>

                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:columnCount="1"
                                    android:paddingStart="@dimen/_1sdp"
                                    android:paddingEnd="@dimen/_1sdp"
                                    android:paddingBottom="@dimen/_1sdp"
                                    android:rowCount="1">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_rowWeight="1"
                                        android:layout_columnWeight="1"
                                        app:cardBackgroundColor="?attr/colorCardBackground"
                                        app:cardCornerRadius="0sp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/prev_balance_lay2_home"
                                                android:layout_width="@dimen/_192sdp"
                                                android:layout_height="wrap_content"
                                                android:paddingEnd="@dimen/_15sdp"
                                                android:text="@string/prev_balance_lay2"
                                                android:textAlignment="textEnd"
                                                android:textColor="?attr/customTextColor"
                                                android:textDirection="ltr"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/prev_balance_lay2_home_1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textColor="?attr/customTextColor"
                                                android:textSize="@dimen/_12sdp" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>


                                </GridLayout>

                                <GridLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:columnCount="1"
                                    android:paddingStart="@dimen/_1sdp"
                                    android:paddingEnd="@dimen/_1sdp"
                                    android:paddingBottom="@dimen/_1sdp"
                                    android:rowCount="1">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_rowWeight="1"
                                        android:layout_columnWeight="1"
                                        android:textColor="?attr/customTextColor"
                                        app:cardBackgroundColor="?attr/colorCardBackground"
                                        app:cardCornerRadius="0sp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:orientation="horizontal"
                                            android:padding="@dimen/_5sdp">

                                            <TextView
                                                android:id="@+id/balance_lay2_home"
                                                android:layout_width="@dimen/_192sdp"
                                                android:layout_height="wrap_content"
                                                android:paddingEnd="@dimen/_15sdp"
                                                android:text="@string/balance_two_lay2"
                                                android:textAlignment="textEnd"
                                                android:textColor="?attr/customTextColor"

                                                android:textDirection="ltr"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/balance_lay2_home_1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:gravity="center"
                                                android:text="0"
                                                android:textSize="@dimen/_12sdp" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>


                                </GridLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_lay3_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="?attr/colorCardBackground"
                        app:cardCornerRadius="@dimen/_3sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/recent_transaction_txt_lay3_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/recent_transaction_lay3"
                                android:textColor="?attr/customTextColor"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/recent_transaction_close_btn_lay3_home"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="@dimen/_8sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/close" />

                            <View
                                android:id="@+id/view1_recent_transaction_lay3_home"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_below="@+id/recent_transaction_txt_lay3_home"
                                android:background="#F5F5F5" />

                            <LinearLayout
                                android:id="@+id/linear_1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_173sdp"
                                android:layout_below="@+id/view1_recent_transaction_lay3_home"
                                android:orientation="vertical">

                                <ListView
                                    android:id="@+id/recent_transactions_list_lay3_home"
                                    android:layout_width="match_parent"
                                    android:layout_height='wrap_content'
                                    android:dividerHeight="@dimen/_2sdp"
                                    android:overScrollMode="never"
                                    android:scrollbars="none" />

                            </LinearLayout>

                            <View
                                android:id="@+id/view2_recent_transaction_lay3_home"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_below="@+id/linear_1"
                                android:background="#F5F5F5" />

                            <TextView
                                android:id="@+id/recent_transaction_more_btn_lay3_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view2_recent_transaction_lay3_home"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:text="@string/more_btn_lay3"
                                android:textColor="@color/purple_500"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_lay4_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="?attr/colorCardBackground"
                        app:cardCornerRadius="@dimen/_3sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/pay_meth_txt_lay4_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/payment_method_lay4"
                                android:textColor="?attr/customTextColor"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/pay_meth_close_btn_lay4_home"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="@dimen/_8sdp"
                                android:padding="@dimen/_2sdp"
                                android:src="@drawable/close" />

                            <View
                                android:id="@+id/view1_pay_meth_lay4_home"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_below="@+id/pay_meth_txt_lay4_home"
                                android:background="#F5F5F5" />

                            <!--                            <LinearLayout-->
                            <!--                                android:id="@+id/linear_2"-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_below="@+id/view1_pay_meth_lay4_home"-->
                            <!--                                android:layout_marginTop="@dimen/_2sdp"-->
                            <!--                                android:layout_marginBottom="@dimen/_2sdp"-->
                            <!--                                android:orientation="vertical">-->

                            <ListView
                                android:id="@+id/pay_meth_list_lay4_home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view1_pay_meth_lay4_home"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:divider="@null"
