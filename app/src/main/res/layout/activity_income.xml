<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/customBackgroundColor"
    android:layoutDirection="ltr"
    tools:context=".Activity.Income_Activity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_layout" />

    <!--    // #1   -->
    <RelativeLayout
        android:id="@+id/income_relativelayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/edttxt_bg"
        android:layoutDirection="ltr"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <TextView
            android:id="@+id/income__addIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-light"
            android:text="@string/income_txt_lay1_addIncome"
            android:textAllCaps="false"
            android:textColor="#1D5A20"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/income_ent_txt_1"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@null"
            android:hint="@string/enter_income_txt_lay1_addIncome"
            android:inputType="number"
            android:textColor="?attr/android:textColor"
            android:textColorHint="#B2B2B2"
            android:textCursorDrawable="@null"
            android:textDirection="ltr"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/income_cal_icon_1"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:src="@drawable/calculator_icon" />

    </RelativeLayout>

    <!--    // #2   -->
    <RelativeLayout
        android:id="@+id/income_relativelayout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
