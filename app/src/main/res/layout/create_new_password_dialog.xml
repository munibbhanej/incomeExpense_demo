<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/dialog_background"
    android:backgroundTint="?attr/colorCardBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_round_remove_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"
                android:text="Create New Password"
                android:textColor="#34ACEF"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_set_cre_for_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"
                android:text=""
                android:textColor="#958F8F"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/edittxt_password_cre_for_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:background="@drawable/login_reg_gb"
                android:hint="Enter New Password"
                android:inputType="textVisiblePassword"
                android:padding="@dimen/_8sdp"
                android:textColorHint="#B2B2B2" />

            <EditText
                android:id="@+id/edittxt_con_password_cre_for_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:background="@drawable/login_reg_gb"
                android:hint="Confirm New Password"
                android:inputType="textVisiblePassword"
                android:padding="@dimen/_8sdp"
                android:textColorHint="#B2B2B2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/updatepassword_btn_cre_forgetpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:background="@drawable/button_bg"
                android:backgroundTint="?attr/customButtonColor"
                android:text="UPDATE PASSWORD"
                android:textColor="?attr/customButtonTextColor"
                app:layout_constraintTop_toBottomOf="@+id/edittxt_cof_password_register" />

            <ProgressBar
                android:id="@+id/progressBar_create_pass_dialog"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:indeterminate="true"
                android:indeterminateTint="@color/purple_500"
                android:indeterminateTintMode="src_atop"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/go_back_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Go Back "
                    android:textColor="?attr/customTextColor"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/login_txt_cre_forgetpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#34ACEF"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
